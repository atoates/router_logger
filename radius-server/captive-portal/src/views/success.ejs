    <script>
        // Session timer with smooth countdown
        const sessionStart = new Date('<%= authenticatedAt %>');
        const sessionDuration = <%= typeof sessionDuration !== 'undefined' ? sessionDuration : 86400 %> * 1000; // in milliseconds
        const isFreeSession = <%= typeof isFreeSession !== 'undefined' ? isFreeSession : false %>;
        const timerElement = document.getElementById('session-timer');
        
        function updateTimer() {
            const now = new Date();
            const elapsed = now - sessionStart;
            const remaining = Math.max(0, sessionDuration - elapsed);
            
            if (remaining <= 0) {
                timerElement.textContent = 'Expired';
                timerElement.style.color = 'var(--color-error)';
                return;
            }
            
            const hours = Math.floor(remaining / (60 * 60 * 1000));
            const minutes = Math.floor((remaining % (60 * 60 * 1000)) / (60 * 1000));
            const seconds = Math.floor((remaining % (60 * 1000)) / 1000);
            
            timerElement.textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            // Change color when time is low
            if (remaining < 60 * 60 * 1000) { // Less than 1 hour
                timerElement.style.color = 'var(--color-warning)';
            }
            if (remaining < 10 * 60 * 1000) { // Less than 10 minutes
                timerElement.style.color = 'var(--color-error)';
            }
            
            requestAnimationFrame(updateTimer);
        }
        
        // Start the timer
        requestAnimationFrame(updateTimer);

        // Logout handler
        document.getElementById('logout-btn').addEventListener('click', async () => {
            const btn = document.getElementById('logout-btn');
            btn.disabled = true;
            btn.innerHTML = `
                <svg class="spinner" viewBox="0 0 24 24" width="18" height="18"><circle cx="12" cy="12" r="10"/></svg>
                Disconnecting...
            `;
            
            try {
                await fetch('/api/auth/logout', { 
                    method: 'POST',
                    credentials: 'same-origin'
                });
                window.location.href = '/';
            } catch (e) {
                console.error('Logout failed:', e);
                btn.disabled = false;
                btn.innerHTML = `
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" x2="9" y1="12" y2="12"/>
                    </svg>
                    Disconnect
                `;
            }
        });
        
        // Auto-redirect after a short delay to let user see the success
        // Uncomment if you want automatic redirect:
        // setTimeout(() => { window.location.href = 'https://www.google.com'; }, 3000);
        
        // Check if WiFi is actually working by trying to fetch an external resource
        async function checkInternetConnection() {
            try {
                // Try to fetch a lightweight resource
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), 3000);
                
                await fetch('https://www.google.com/generate_204', {
                    mode: 'no-cors',
                    signal: controller.signal
                });
                clearTimeout(timeoutId);
                
                console.log('‚úÖ Internet connection working');
                document.getElementById('wifi-activation').style.display = 'none';
                return true;
            } catch (e) {
                console.log('‚ö†Ô∏è Internet not working yet:', e.message);
                
                // Check if we have CoovaChilli activation URL in session storage
                const freeSession = sessionStorage.getItem('freeSession');
                if (freeSession) {
                    try {
                        const session = JSON.parse(freeSession);
                        if (session.successUrl || session.routerLoginUrl) {
                            // We may have the activation URL
                            console.log('Found session data:', session);
                        }
                    } catch (e) {}
                }
                
                // Show the activation section
                document.getElementById('wifi-activation').style.display = 'block';
                
                // Build activation URL from URL params if available
                const urlParams = new URLSearchParams(window.location.search);
                const activationUrl = urlParams.get('activate');
                if (activationUrl) {
                    const activateBtn = document.getElementById('activate-wifi-btn');
                    activateBtn.href = decodeURIComponent(activationUrl);
                    activateBtn.target = '_self';
                }
                
                return false;
            }
        }
        
        // Check connection after a short delay
        setTimeout(checkInternetConnection, 1500);
        
        // Emergency services handler - opens dedicated UK services
        function findEmergencyService(service) {
            switch(service) {
                case 'defibrillator':
                    // DefibFinder UK - official NHS-partnered defibrillator locator
                    window.open('https://www.defibfinder.uk/', '_blank');
                    break;
                case 'ae':
                    // NHS A&E finder
                    window.open('https://www.nhs.uk/service-search/find-an-accident-and-emergency-service/', '_blank');
                    break;
                case 'police':
                    // Met Police station finder
                    window.open('https://www.met.police.uk/contact/find-a-police-station/', '_blank');
                    break;
            }
        }
    </script>
