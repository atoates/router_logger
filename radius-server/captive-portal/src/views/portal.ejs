<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta name="theme-color" content="#030712">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title><%= title %></title>
    <!-- Load CSS first (critical) -->
    <link rel="stylesheet" href="/css/portal.css">
    <!-- Google Fonts - loaded async to prevent blocking if unavailable -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"></noscript>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>ðŸ“¶</text></svg>">
</head>
<body>
    <div class="portal-container">
        <!-- Top Banner Ad Slot -->
        <% if (typeof ads !== 'undefined' && ads.topBanner) { %>
        <div class="ad-slot ad-slot-top" data-ad-position="top-banner">
            <% if (ads.topBanner.type === 'image') { %>
            <a href="<%= ads.topBanner.link %>" target="_blank" rel="noopener sponsored" class="ad-link" data-ad-id="<%= ads.topBanner.id %>">
                <img src="<%= ads.topBanner.image %>" alt="<%= ads.topBanner.alt || 'Advertisement' %>" class="ad-image">
            </a>
            <% } else if (ads.topBanner.type === 'html') { %>
            <div class="ad-html"><%- ads.topBanner.html %></div>
            <% } %>
            <span class="ad-label">Sponsored</span>
        </div>
        <% } else { %>
        <!-- Static Banner Ad Fallback -->
        <div class="ad-slot ad-slot-top" data-ad-position="top-banner">
            <a href="https://vacatad.com" target="_blank" rel="noopener sponsored" class="ad-link" data-ad-id="static-banner-1">
                <img src="/images/banner-ad-1.gif" alt="VacatAd Advertisement" class="ad-image">
            </a>
            <span class="ad-label">Sponsored</span>
        </div>
        <% } %>

        <div class="portal-card">
            <!-- Header -->
            <div class="portal-header">
                <div class="logo-container">
                    <img src="/images/Logo.png" alt="VacatAd" />
                </div>
                <h1>
                    <span class="register-heading">Register for Free</span><br>
                    <span class="wifi-heading">VacatAd Wi-Fi</span>
                </h1>
                <p class="subtitle">Fast, secure and completely free access in partnership with VacatAd.</p>
            </div>

            <!-- Registration Form -->
            <div class="registration-form">
                <form id="register-form" class="auth-form" novalidate>
                    <div class="form-group">
                        <label for="name">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                <circle cx="12" cy="7" r="4"/>
                            </svg>
                            Your Name
                        </label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            placeholder="Enter your name" 
                            autocomplete="name"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="phone">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                            </svg>
                            Phone Number
                        </label>
                        <input 
                            type="tel" 
                            id="phone" 
                            name="phone" 
                            placeholder="Enter your phone number" 
                            autocomplete="tel"
                            inputmode="tel"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="email">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect width="20" height="16" x="2" y="4" rx="2"/>
                                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                            </svg>
                            Email Address
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            placeholder="you@example.com" 
                            autocomplete="email"
                            inputmode="email"
                            required
                        >
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="terms" name="terms" required>
                            <span>Agree with <a href="/terms" target="_blank">Terms of service</a></span>
                        </label>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" id="newsletter" name="newsletter">
                            <span>Subscribe to newsletter</span>
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary btn-large btn-register" id="register-submit">
                        <span class="btn-text">Register</span>
                        <span class="btn-loading" style="display:none">
                            <svg class="spinner" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/></svg>
                            Registering...
                        </span>
                    </button>
                </form>
            </div>

            <!-- Error/Success Messages -->
            <div id="message" class="message" style="display:none" role="alert" aria-live="polite"></div>

            <!-- In-Card Ad Slot (above footer) -->
            <% if (typeof ads !== 'undefined' && ads.inCard) { %>
            <div class="ad-slot ad-slot-inline" data-ad-position="in-card">
                <% if (ads.inCard.type === 'image') { %>
                <a href="<%= ads.inCard.link %>" target="_blank" rel="noopener sponsored" class="ad-link" data-ad-id="<%= ads.inCard.id %>">
                    <img src="<%= ads.inCard.image %>" alt="<%= ads.inCard.alt || 'Advertisement' %>" class="ad-image">
                </a>
                <% } else if (ads.inCard.type === 'html') { %>
                <div class="ad-html"><%- ads.inCard.html %></div>
                <% } else if (ads.inCard.type === 'promo') { %>
                <div class="ad-promo">
                    <% if (ads.inCard.icon) { %>
                    <img src="<%= ads.inCard.icon %>" alt="" class="ad-promo-icon">
                    <% } %>
                    <div class="ad-promo-content">
                        <strong><%= ads.inCard.title %></strong>
                        <span><%= ads.inCard.description %></span>
                    </div>
                    <a href="<%= ads.inCard.link %>" target="_blank" rel="noopener sponsored" class="btn btn-ad">
                        <%= ads.inCard.cta || 'Learn More' %>
                    </a>
                </div>
                <% } %>
                <span class="ad-label">Sponsored</span>
            </div>
            <% } %>

            <!-- Footer -->
            <div class="portal-footer">
                <p>
                    By connecting, you agree to our<br>
                    <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
                </p>
            </div>
        </div>

        <!-- Bottom Banner Ad Slot -->
        <% if (typeof ads !== 'undefined' && ads.bottomBanner) { %>
        <div class="ad-slot ad-slot-bottom" data-ad-position="bottom-banner">
            <% if (ads.bottomBanner.type === 'image') { %>
            <a href="<%= ads.bottomBanner.link %>" target="_blank" rel="noopener sponsored" class="ad-link" data-ad-id="<%= ads.bottomBanner.id %>">
                <img src="<%= ads.bottomBanner.image %>" alt="<%= ads.bottomBanner.alt || 'Advertisement' %>" class="ad-image">
            </a>
            <% } else if (ads.bottomBanner.type === 'html') { %>
            <div class="ad-html"><%- ads.bottomBanner.html %></div>
            <% } %>
            <span class="ad-label">Sponsored</span>
        </div>
        <% } %>

        <!-- Background decoration -->
        <div class="bg-decoration" aria-hidden="true">
            <div class="circle circle-1"></div>
            <div class="circle circle-2"></div>
            <div class="circle circle-3"></div>
        </div>
    </div>

    <!-- Hidden fields for router info -->
    <input type="hidden" id="client-mac" value="<%= clientMac || '' %>">
    <input type="hidden" id="router-mac" value="<%= apMac || '' %>">
    <input type="hidden" id="router-id" value="<%= routerId || '' %>">
    <input type="hidden" id="login-url" value="<%= loginUrl || '' %>">
    <input type="hidden" id="original-url" value="<%= originalUrl || '' %>">
    <!-- CoovaChilli/UAM parameters -->
    <input type="hidden" id="chilli-challenge" value="<%= challenge || '' %>">
    <input type="hidden" id="chilli-uamip" value="<%= uamip || '' %>">
    <input type="hidden" id="chilli-uamport" value="<%= uamport || '' %>">
    <input type="hidden" id="chilli-login-url" value="<%= chilliLoginUrl || '' %>">

    <script src="/js/portal.js"></script>
    
    <!-- Ad Tracking -->
    <script>
    (function() {
        // Track ad impressions
        document.querySelectorAll('.ad-slot').forEach(slot => {
            const position = slot.dataset.adPosition;
            const adLink = slot.querySelector('.ad-link');
            const adId = adLink?.dataset.adId;
            
            // Log impression
            if (adId) {
                fetch('/api/ads/impression', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ adId, position, page: 'portal' })
                }).catch(() => {});
            }
            
            // Track clicks
            if (adLink) {
                adLink.addEventListener('click', () => {
                    fetch('/api/ads/click', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ adId, position, page: 'portal' })
                    }).catch(() => {});
                });
            }
        });
    })();
    </script>
</body>
</html>

