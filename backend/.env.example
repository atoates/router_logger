PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL on Railway)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings
FRONTEND_URL=http://localhost:3000

# API Keys (optional - for securing router endpoints)
API_KEY=your-secret-api-key-here

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=vacatad/rut200

# Cell Tower Location Service (OpenCellID)
OPENCELLID_API_KEY=your-opencellid-api-key
ENABLE_GEO_ENRICHMENT=true

# RMS API Integration (https://developers.rms.teltonika-networks.com/)
RMS_ACCESS_TOKEN=your-rms-personal-access-token
# Sync interval in minutes - default 60 minutes (100k requests/month limit = ~3,333/day)
RMS_SYNC_INTERVAL_MINUTES=60
# Delay between processing each device during sync (ms) - increase if hitting rate limits
# Default 500ms means ~2 devices/second. With 10 devices = ~5 seconds per sync
RMS_SYNC_DELAY_MS=500
# Delay for initial device sync when fetching statistics (ms) - longer than regular updates
# Used when device has no previous data and needs comprehensive statistics fetch
# Default 2000ms (2 seconds) helps avoid rate limits during bulk initial imports
RMS_INITIAL_SYNC_DELAY_MS=2000

# API Rate Limiting
RATE_LIMIT_WINDOW_MIN=15
RATE_LIMIT_MAX=100

# Server-side cache TTLs
# Cache for /api/routers endpoint (seconds)
ROUTERS_CACHE_TTL_SECONDS=60
